{% block javascript_csrf_token_widget %}
    <input type="hidden" {{ block('widget_attributes') }}/>
    <script type="text/javascript">
        {# fix for the elements with the same id #}
        (function () {
            var elements = document.querySelectorAll("[id='{{ id }}']");
            for(var i = 0; i < elements.length; i++) {
                elements[i].value = '{{ value }}';
            }
        }());
    </script>
{% endblock %}